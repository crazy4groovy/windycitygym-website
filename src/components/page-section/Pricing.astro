---
import PricingValueList from "./PricingValueList.astro";
---

<!-- Pricing Section Begin -->
<section class="pricing-section spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title">
          <span>Cardston Plans</span>
          <h2>Choose your membership</h2>
          <h3>*Ask about our special "couples" deals!</h3>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-lg-4 col-md-8">
        <div class="ps-item">
          <h3>3-Month Unlimited</h3>
          <div class="pi-price">
            <h2>$80.00</h2>
            <span>SINGLE USER</span>
          </div>
          <PricingValueList />
          <a href="#contact-us" class="primary-btn pricing-btn">Contact Us Now</a>
          <!-- <a href="#" class="thumb-icon"><i class="fa fa-picture-o"></i></a> -->
        </div>
      </div>
      <div class="col-lg-4 col-md-8">
        <div class="ps-item">
          <h3>6-Month* Unlimited</h3>
          <div class="pi-price">
            <h2>$120.00</h2>
            <span>SINGLE USER</span>
          </div>
          <PricingValueList />
          <a href="#contact-us" class="primary-btn pricing-btn">Contact Us Now</a>
          <!-- <a href="#" class="thumb-icon"><i class="fa fa-picture-o"></i></a> -->
        </div>
      </div>
      <div class="col-lg-4 col-md-8">
        <div class="ps-item">
          <h3>12-Month* Unlimited</h3>
          <div class="pi-price">
            <h2>$200.00</h2>
            <span>SINGLE USER</span>
          </div>
          <PricingValueList />
          <a href="#contact-us" class="primary-btn pricing-btn">Contact Us Now</a>
          <!-- <a href="#" class="thumb-icon"><i class="fa fa-picture-o"></i></a> -->
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Pricing Section End -->
 <style>
  h3 {
    color: #aaa;
  }
 </style>
