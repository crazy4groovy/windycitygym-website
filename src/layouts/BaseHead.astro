---
import "./BaseHead.css";

export interface Props {
  title?: string;
  description?: string;
  css?: string;
  image?: string;
  confetti?: boolean;
}

import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  css,
  image = "/social.webp",
  confetti = false,
} = Astro.props;
---

<!-- Google tag (gtag.js) -->
<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-N5HKBP06MW"></script>
<script is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', 'G-N5HKBP06MW');
</script>
<!-- End Google Tag Manager -->

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<link rel="icon" type="image/x-icon" href="/favicon1.png" />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />

<!-- FONTS -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css?family=Muli:300,400,500,600,700,800,900&display=swap"
  rel="stylesheet"
/>
<link
  href="https://fonts.googleapis.com/css?family=Oswald:300,400,500,600,700&display=swap"
  rel="stylesheet"
/>

<!-- STYLES -->
<link rel="stylesheet" href="css/bootstrap.min.css" type="text/css" />
<link rel="stylesheet" href="css/font-awesome.min.css" type="text/css" />
<link rel="stylesheet" href="css/flaticon.css" type="text/css" />
<link rel="stylesheet" href="css/owl.carousel.min.css" type="text/css" />
<link rel="stylesheet" href="css/barfiller.css" type="text/css" />
<link rel="stylesheet" href="css/magnific-popup.css" type="text/css" />
<link rel="stylesheet" href="css/slicknav.min.css" type="text/css" />

<!-- MAIN CSS -->
<link rel="stylesheet" href="css/style.css" />

<!-- SCRIPTS -->
<script is:inline src="js/jquery-3.3.1.min.js"></script>
<script is:inline defer src="js/bootstrap.min.js"></script>
<script is:inline defer src="js/jquery.magnific-popup.min.js"></script>
<script is:inline defer src="js/masonry.pkgd.min.js"></script>
<script is:inline defer src="js/jquery.barfiller.js"></script>
<script is:inline defer src="js/jquery.slicknav.js"></script>
<script is:inline defer src="js/owl.carousel.min.js"></script>
<script is:inline defer src="js/main.js"></script>
<script
  async
  defer
  src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"
></script>
<!-- END SCRIPTS -->
